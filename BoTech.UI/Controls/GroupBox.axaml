<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:botechui="https://github.com/BoTech-Development/BoTech.UI">
    <Design.PreviewWith>
        <botechui:GroupBox Header="Bello">
           <TextBlock Text="InnerContent"/>
        </botechui:GroupBox>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type botechui:GroupBox}" TargetType="botechui:GroupBox">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Name="PART_GridContainer">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Name="PART_HeaderBorder"
                            Padding="5,0,5,0" 
                             Margin="5,0,0,0"
                             Background="{DynamicResource SystemControlBackgroundAltHighBrush}" 
                             ZIndex="1">
                        <TextBlock
                            Text="{TemplateBinding Header}"/>
                    </Border>
                    <Border  Grid.RowSpan="2" 
                             Name="PART_ContentBorder"
                             Padding="5,5,5,5"
                             Grid.ColumnSpan="2"
                             CornerRadius="4"
                             Margin="0,10,0,0"
                             BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                             BorderThickness="2">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"></ContentPresenter>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
